<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinearLayout with orientation = horizontal:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textview1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/layout_padding"
            android:background="@android:color/holo_red_dark"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="layout_gravity\ntop"/>

        <TextView
            android:id="@+id/textview2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/layout_padding"
            android:background="@android:color/holo_blue_dark"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="layout_gravity\ncenter"/>

        <TextView
            android:id="@+id/textview3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/layout_padding"
            android:background="@android:color/holo_green_dark"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="layout_gravity\nbottom"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The linear layout with orientation = horizontal stacks widgets left to right, next to each other, but handles layout_gravity = 'top' and 'bottom'"/>

